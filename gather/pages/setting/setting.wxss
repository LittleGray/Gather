/* setting.wxss */
.back {
  width: 100%;
  height: 280rpx;  
  background-color: #2a8cff;
}
.box {
  width: 660rpx;
  height: 200rpx;
  background-color: white;
  z-index: 0;
  position: absolute;
  top:180rpx;
  border: 1px solid white;
  box-shadow: 0px 0px 10px rgba(0, 204, 204, 0.3);
  border-radius: 5px;
}
.content {
  width: 100%;
  height: 720rpx; 
  position: absolute;
  top:385rpx;
  border-top: 1px solid rgba(0, 204, 204, 0.3);
  /* box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3); */
  z-index: 1;
}
.list {
  width:100%;
  height:120rpx;
  border-bottom:1px solid #cdcdcd;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.list-pic {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 20rpx;
}
.right {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 10rpx;
}
.text {
  font-family: 微软雅黑;
  font-size: 12pt;
  color: black;
  position: absolute;
  left: 100rpx;
}